---
interface Props {
	name: string
	email: string
	avatar: string
	updatedAt: Date
}

const { name, email, avatar, updatedAt } = Astro.props
---

<div class='flex items-center gap-3 pb-5'>
	<div class='avatar'>
		<div class='w-12 h-12 mask mask-squircle'>
			<img src={avatar} alt='Avatar Tailwind CSS Component' class='p-0 m-0' />
		</div>
	</div>
	<div>
		<div class='font-bold'>{name}</div>
		<div class='text-sm'>{email}</div>
		<time class='text-xs text-gray-500' datetime={updatedAt.toUTCString()}>{updatedAt.toUTCString()}</time>
	</div>
</div>
